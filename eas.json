{
  "cli": {
    "version": ">= 15.0.10",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "withoutCredentials": true,
        "env": {
          "GRADLE_OPTS": "-Dorg.gradle.daemon=true -Dorg.gradle.jvmargs=-Xmx4096m"
        }
      },
      "env": {
        "API_URL": "https://app.petfurme.shop/api"
      }
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
